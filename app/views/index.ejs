<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Test</title>
    <link rel="stylesheet" type="text/css" href="/css/style.css">
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:300' rel='stylesheet' type='text/css'>
    <script src="/js/jquery-3.2.1.min.js"></script>
  </head>
  <body>
    <div class="container">

      <p> <a href="/wcDemo"> Click to see WC Demo</a> </p>

      <fieldset style="border:1px solid;">
         <h3> Get Patient Details</h3>
        <form action="/" method="post">
          <input name="pName" type="text" class="ghost-input" placeholder="Enter First Name" required>
          <input name="pAction" type="hidden" id="pAction" value="getDetail">
          <input type="submit" class="ghost-button" id="getDetail" value="Get Details">
          <input type="submit" class="ghost-button" id="delReco" value="Delete Record">
        </form>
      </fieldset>
      <div style="margin:10px;"></div>
      <fieldset style="border:1px solid;">
         <h3> Save Patient Details</h3>
        <form action="/saveData" method="post">
          <input name="pName" type="text" class="ghost-input" placeholder="Enter Name" required>
          <input name="pAge" type="text" class="ghost-input" placeholder="Enter Age" required>
          <select name="pGender" class="ghost-input" required>
              <option value="Male">Male</option>
              <option value="Female">Female</option>
            </select>
          <input name="pLocation" type="text" class="ghost-input" placeholder="Enter Location" required>
          <input type="submit" class="ghost-button" value="Save Details">
        </form>
      </fieldset>

      <% if(respData !== null){ %>
        <p><%= respData %></p>
      <% } %>

      <% if(error !== null){ %>
        <p><%= error %></p>
      <% } %>

      <% if(rows !== null){ %>
        <p><%= rows %></p>
      <% } %>
    </div>

<script type="text/javascript">
jQuery(document).on( "click",'#getDetail,#delReco',function() {
      if(this.id=="getDetail"){
         jQuery("#pAction").val(this.id);
      }else{
         jQuery("#pAction").val(this.id);
      }
});
</script>
  </body>
</html>
